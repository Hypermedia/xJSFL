	function traceHierachy(root, fnTrace, fnTest)
	{
		var indent = '';
		var level = 0;
		
		function list(e, i)
		{
			fl.trace(indent + fnTrace(e, level));
			if(fnTest(e))
			{
				level ++;
				indent += '	';
				e.each(list);
				indent = indent.substring(1);
				level--;
			}
		}
		
		list(root);
		
	}
	
